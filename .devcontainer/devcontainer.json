{
  "name": "Bulk Email Sender - Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip install --upgrade pip setuptools wheel && [ -f requirements.txt ] && pip install --user -r requirements.txt && pip install --user streamlit && echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false",
  "portsAttributes": {
    "8501": {
      "label": "Bulk Email Sender App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
